import discord
import random

intents = discord.Intents.all()
intents.messages = True
intents.members = True
intents.typing = True
client = discord.Client(intents=intents)

# Indique le statut/activit√© du bot en tant que "!commands" pour expliquer comment utiliser le bot + indique que le bot est pr√™t dans la console
@client.event
async def on_ready():
  await client.change_presence(activity=discord.Game(name="!commands üßΩ"))
  print("Le bot est pr√™t !")

# Envoie un msg dans le channel general quand un membre rejoint le serveur
@client.event
async def on_member_join(member):
  general_channel = client.get_channel(1044900336806137909)
  await general_channel.send("HELLOOOOO " + member.name + " bienvenue et fais comme chez toi gros bgg! \n Voici les principales commandes auxquelles je peux r√©pondre : \n***!play*** pour lancer le jeu \n***!hint*** pour demander un indice \n***!score*** pour demander ton score actuel \n***!restart*** pour recommencer le jeu √† tout moment \n !stop pour arr√™ter  le jeu \n***!commands*** pour voir les commandes \n Amuses toi bien!")
  await general_channel.send("https://tenor.com/view/spongebob-welcome-happy-rainbow-gif-15830260")

# Envoie un message dans le channel general quand un membre quitte le serveur
@client.event
async def on_member_remove(member) :
  general_channel = client.get_channel(1044900336806137909)
  await general_channel.send("DEHOOOOOOOORS " + member.name + " !!!")
  await general_channel.send("https://tenor.com/view/dehors-gif-20221373")


# Fonction comportant le jeu
@client.event
